{
  "name": "ecommerce-react",
  "version": "1.0.0",
  "engines": {
    "node": "14.15.4"
  },
  "description": "Ecommerce App with React.JS",
  "main": "server.js",
  "scripts": {
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amirsolo/ecommerce-react.git"
  },
  "author": "Amir Solo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amirsolo/ecommerce-react/issues"
  },
  "homepage": "https://github.com/amirsolo/ecommerce-react#readme",
  "devDependencies": {
    "concurrently": "*",
    "nodemon": "*"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "stripe": "^8.140.0"
  }
}
